<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="0dp" tools:context=".LinearLayout"
    android:background="#000000"
    android:weightSum="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#18fff3"
        android:layout_gravity="center"
        android:layout_weight=".2"
        android:focusable="false"
        android:layout_margin="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="ROJO"
            android:id="@+id/button"
            android:layout_gravity="center"
            android:layout_weight="25"
            android:allowUndo="false"
            android:background="#ff2823"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="VERDE"
            android:id="@+id/button2"
            android:layout_gravity="center"
            android:layout_weight="25"
            android:singleLine="false"
            android:background="#1fff25"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="AZUL"
            android:id="@+id/button3"
            android:layout_gravity="center"
            android:layout_weight="25"
            android:background="#1758ff"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="AMARILLO"
            android:id="@+id/button4"
            android:layout_gravity="center"
            android:layout_weight="25"
            android:background="#ffff13"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView5"
        android:background="#a1acad1f" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Columna_uno"
        android:id="@+id/textView"
        android:background="#ca2a97"
        android:layout_weight=".2"
        android:gravity="fill_horizontal|center"
        android:foregroundGravity="left|clip_horizontal" />

    <TextView
    android:layout_width="fill_parent"
    android:layout_height="10dp"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:id="@+id/textView6"
        android:background="#a1acad1f" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Columna_dos"
        android:id="@+id/textView2"
        android:background="#ca2a97"
        android:layout_weight=".2"
        android:layout_gravity="center_horizontal"
        android:gravity="fill_horizontal|center" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView7"
        android:background="#a1acad1f" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Columna_tres"
        android:id="@+id/textView3"
        android:background="#ca2a97"
        android:layout_weight=".2"
        android:layout_gravity="center_horizontal"
        android:gravity="fill_horizontal|center" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView8"
        android:background="#a1acad1f" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Columna_cuatro"
        android:id="@+id/textView4"
        android:background="#ca2a97"
        android:layout_weight=".2"
        android:layout_gravity="center"
        android:gravity="fill_horizontal|center" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView9"
        android:background="#a1acad1f" />

</LinearLayout>
